<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache  Software Foundation//DTD Struts Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<form-beans>
		<form-bean name="page1form" type="gse.Page1ActionForm"/>
		<form-bean name="page2form" type="gse.Page2ActionForm"/>
	</form-beans>

	<global-forwards>
		<forward name="forward1" path="/page1.jsp"/>
		<forward name="forward2" path="/page2.jsp"/>
	</global-forwards>

	<action-mappings>
		<action path="/action1" name="page1form" type="gse.Page1Action" input="/page1.jsp"/>
		<action path="/action2" name="page2form" type="gse.Page2Action" input="/page2.jsp"/>
	</action-mappings>

</struts-config>